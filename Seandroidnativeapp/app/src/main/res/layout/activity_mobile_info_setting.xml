<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.socialengineaddons.mobileapp.classes.modules.user.settings.MobileInfoSetting">

    <LinearLayout
        android:id="@+id/mobile_info_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawableStart="@drawable/ic_arrow_back"
                android:drawableLeft="@drawable/ic_arrow_back"
                android:drawablePadding="@dimen/padding_10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:text="@string/phone_number_details"
                android:textColor="@color/themeButtonColor"
                android:textSize="@dimen/size_18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivPageIcon"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:src="@drawable/ic_edit_otp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPageDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_left_margin"
            android:layout_marginLeft="@dimen/layout_left_margin"
            android:layout_marginTop="@dimen/sourceview_top_margin"
            android:layout_marginEnd="@dimen/layout_right_margin"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:text="@string/mobile_info_title_msg"
            android:textColor="@color/black"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/enable_phoneno_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/two_factor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_left_margin"
                    android:layout_marginLeft="@dimen/layout_left_margin"
                    android:layout_weight="0.8"
                    android:gravity="bottom"
                    android:text="@string/two_factor_title"
                    android:textColor="@color/black" />

                <Switch
                    android:id="@+id/status_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginEnd="@dimen/layout_right_margin"
                    android:layout_marginRight="@dimen/layout_right_margin"
                    android:layout_weight="0.2"
                    android:theme="@style/SwitchColor" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_phoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_left_margin"
                android:layout_marginLeft="@dimen/layout_left_margin"
                android:layout_marginEnd="@dimen/layout_right_margin"
                android:layout_marginRight="@dimen/layout_right_margin"
                android:paddingLeft="@dimen/margin_20dp"
                android:paddingStart="@dimen/margin_20dp"
                android:textColor="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/user_phone_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_left_margin"
                        android:layout_marginLeft="@dimen/layout_left_margin"
                        android:layout_marginEnd="@dimen/layout_right_margin"
                        android:layout_marginRight="@dimen/layout_right_margin"
                        android:drawablePadding="@dimen/padding_5dp"
                        android:maxLines="1"
                        android:textColor="@color/black" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_delete_phoneno"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_25dp"
                    android:layout_marginRight="@dimen/margin_25dp"
                    android:background="@drawable/ic_delete_black" />

                <Button
                    android:id="@+id/btn_edit_phoneno"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_60dp"
                    android:layout_marginRight="@dimen/margin_60dp"
                    android:background="@drawable/ic_edit_black" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginBottom="@dimen/padding_10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/country_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_left_margin"
                android:layout_marginLeft="@dimen/layout_left_margin"
                android:layout_weight="0.75"
                android:drawablePadding="@dimen/padding_5dp"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/black" />


        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_50dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/add_phoneno_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_10dp"
            android:paddingStart="@dimen/padding_10dp"
            android:paddingEnd="@dimen/padding_10dp"
            android:visibility="gone">


            <ImageView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_120dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:src="@drawable/ic_quick_sign_up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verify_your_number"
                android:textColor="@color/black"
                android:textSize="@dimen/size_21sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_64dp"
                android:paddingLeft="@dimen/padding_64dp"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingEnd="@dimen/padding_64dp"
                android:paddingRight="@dimen/padding_64dp"
                android:text="@string/verify_your_number_description"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:background="@drawable/edittext_bottom_border_normal"
                android:gravity="center"
                android:hint="@string/enter_your_mobile_number"
                android:inputType="phone"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:textAlignment="center"
                android:textColor="@color/red_color_picker"
                android:visibility="gone" />


            <Button
                android:id="@+id/btn_verify_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_42dp"
                android:layout_marginTop="@dimen/margin_50dp"
                android:layout_marginBottom="@dimen/margin_50dp"
                android:background="@drawable/rounded_button_design"
                android:paddingLeft="@dimen/dimen_85dp"
                android:paddingStart="@dimen/dimen_85dp"
                android:paddingRight="@dimen/dimen_85dp"
                android:paddingEnd="@dimen/dimen_85dp"
                android:text="@string/send_otp"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
