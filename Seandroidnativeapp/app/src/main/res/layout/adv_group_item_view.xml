<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_5dp"
    android:layout_marginStart="@dimen/dimen_5dp"
    android:layout_marginRight="@dimen/dimen_5dp"
    android:layout_marginEnd="@dimen/dimen_5dp"
    android:layout_marginBottom="@dimen/dimen_5dp"
    android:paddingRight="@dimen/dimen_5dp"
    android:paddingEnd="@dimen/dimen_5dp">

    <ImageView
        android:id="@+id/contentImage"
        android:layout_width="@dimen/dimen_110dp"
        android:layout_height="@dimen/dimen_95dp"
        android:layout_marginTop="@dimen/dimen_13dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:contentDescription="@null"
        android:background="@drawable/rounded_corner_grey"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/contentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/gray_darker"
        android:textSize="@dimen/size_18sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/contentImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/body_text_12"
        android:textSize="@dimen/size_12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/contentImage"
        app:layout_constraintTop_toBottomOf="@id/contentTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="textStart"
        android:gravity="start"
        />

    <TextView
        android:id="@+id/tvMemberCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/body_text_normal"
        android:textSize="@dimen/size_11sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/contentImage"
        app:layout_constraintTop_toBottomOf="@id/tvBody"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="textStart"
        android:gravity="start"
        />


    <TextView
        android:id="@+id/sponsoredLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/sponsored_label"
        android:paddingTop="@dimen/padding_2dp"
        android:paddingBottom="@dimen/padding_2dp"
        android:paddingLeft="@dimen/padding_3dp"
        android:paddingRight="@dimen/padding_4dp"
        android:paddingStart="@dimen/padding_3dp"
        android:paddingEnd="@dimen/padding_4dp"
        android:text="@string/sponsored"
        android:textColor="@color/white"
        android:textSize="@dimen/size_9sp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="@id/contentImage"
        app:layout_constraintLeft_toLeftOf="@id/contentImage"
        />

    <TextView
        android:id="@+id/featuredLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/featured_label"
        android:paddingTop="@dimen/padding_2dp"
        android:paddingBottom="@dimen/padding_2dp"
        android:paddingLeft="@dimen/padding_3dp"
        android:paddingRight="@dimen/padding_4dp"
        android:paddingStart="@dimen/padding_3dp"
        android:paddingEnd="@dimen/padding_4dp"
        android:text="@string/featured"
        android:textColor="@color/white"
        android:textSize="@dimen/size_9sp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_5dp"
        app:layout_constraintTop_toBottomOf="@id/sponsoredLabel"
        app:layout_constraintLeft_toLeftOf="@id/contentImage"
        />

    <include
        android:id="@+id/option_icon_layout"
        layout="@layout/option_icon_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:adjustViewBounds="false"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_f9f9f9"
        app:layout_constraintTop_toBottomOf="@id/contentImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:id="@+id/vGroupItemDivider"
    />
</android.support.constraint.ConstraintLayout>
