<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/end_of_result_block"
    android:visibility="gone"
    android:background="@color/white">

    <ProgressBar
        style="?android:attr/progressBarStyleSmallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:padding="@dimen/progress_item_padding"
        android:paddingStart="@dimen/progress_item_padding"
        android:paddingEnd="@dimen/progress_item_padding"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <include layout="@layout/add_freind_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:visibility="gone"/>

</RelativeLayout>
