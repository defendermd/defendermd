<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context="com.socialengineaddons.mobileapp.classes.modules.advancedActivityFeeds.FeedsFragment">

    <View
        android:layout_width="@dimen/icon_size_status_profile_image"
        android:layout_height="@dimen/icon_size_status_profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:background="@drawable/circle_border_pressed"
        android:id="@+id/profile_image"/>

    <View
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_8dp"
        android:id="@+id/feed_title"
        android:layout_marginLeft="@dimen/element_spacing_normal"
        android:layout_marginStart="@dimen/element_spacing_normal"
        android:layout_marginTop="@dimen/margin_15dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray_background"/>

    <View
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_8dp"
        android:id="@+id/feed_time"
        android:layout_marginLeft="@dimen/element_spacing_normal"
        android:layout_marginStart="@dimen/element_spacing_normal"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/feed_title"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/gray_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/feed_attachment_image_height"
        android:id="@+id/feed_attachment"
        android:layout_marginLeft="@dimen/element_spacing_normal"
        android:layout_marginStart="@dimen/element_spacing_normal"
        android:layout_marginRight="@dimen/element_spacing_normal"
        android:layout_marginEnd="@dimen/element_spacing_normal"
        android:layout_marginTop="@dimen/margin_10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        android:background="@color/gray_background"/>

    <View
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_8dp"
        android:id="@+id/feed_body"
        android:layout_marginLeft="@dimen/element_spacing_normal"
        android:layout_marginStart="@dimen/element_spacing_normal"
        android:layout_marginTop="@dimen/margin_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feed_attachment"
        android:background="@color/gray_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_8dp"
        android:id="@+id/feed_description"
        android:layout_marginLeft="@dimen/element_spacing_normal"
        android:layout_marginStart="@dimen/element_spacing_normal"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/element_spacing_normal"
        android:layout_marginEnd="@dimen/element_spacing_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feed_body"
        android:background="@color/gray_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10dp"
        android:id="@+id/feed_divider"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feed_description"
        android:background="@color/dark_gray"/>


</android.support.constraint.ConstraintLayout>
