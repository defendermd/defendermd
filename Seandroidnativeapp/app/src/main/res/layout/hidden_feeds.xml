<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_10dp"
    android:paddingBottom="@dimen/padding_10dp">

    <com.socialengineaddons.mobileapp.classes.common.ui.SelectableTextView
        android:id="@+id/hiddenFeedBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:textSize="@dimen/body_default_font_size"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvHeading"
        android:visibility="gone"
        android:gravity="center"
        android:paddingTop="@dimen/padding_5dp"
        android:paddingBottom="@dimen/padding_15dp"
        android:paddingLeft="@dimen/padding_20dp"
        android:paddingStart="@dimen/padding_20dp"
        android:paddingRight="@dimen/padding_20dp"
        android:paddingEnd="@dimen/padding_20dp"
        android:text="@string/choose_plan"
        android:textSize="@dimen/size_14sp"
        android:textColor="@color/body_text_3"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:paddingTop="@dimen/padding_5dp"
            android:paddingBottom="@dimen/padding_5dp"
            android:textColor="@color/themeButtonColor"
            android:textSize="@dimen/title_medium_font_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingStart="@dimen/dimen_5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/padding_5dp"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/body_default_font_size"
                android:fontFamily="sans-serif-condensed"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:paddingEnd="@dimen/padding_30dp"
                android:paddingRight="@dimen/padding_30dp"
                android:paddingBottom="@dimen/padding_15dp"
                android:textSize="@dimen/body_default_font_size"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@color/select_option_divider_color" />
</LinearLayout>
