<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/form_main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_10dp">


    <LinearLayout
        android:id="@+id/selector_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_5dp"
        android:paddingLeft="@dimen/padding_5dp"
        android:paddingEnd="@dimen/padding_5dp"
        android:paddingRight="@dimen/padding_5dp">

        <TextView
            android:id="@+id/view_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="@dimen/body_default_font_size"
            android:visibility="visible" />


        <com.hbb20.CountryCodePicker
            android:id="@+id/ccpElement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:ccp_textSize="@dimen/size_14sp" />


        <TextView
            android:id="@+id/error_view"
            style="@style/fieldsValidationError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="@dimen/padding_5dp"
        android:paddingLeft="@dimen/padding_5dp"
        android:paddingEnd="@dimen/padding_5dp"
        android:paddingRight="@dimen/padding_5dp"
        android:textSize="@dimen/body_default_font_size"
        android:visibility="gone" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_view_height"
        android:layout_marginTop="@dimen/margin_12dp"
        android:background="@color/colordevider"
        android:visibility="visible" />

</LinearLayout>
