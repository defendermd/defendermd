<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dimen_1dp"
    android:paddingBottom="@dimen/dimen_1dp"
    android:background="@color/white"
    tools:context="com.socialengineaddons.mobileapp.classes.modules.user.BrowseMemberFragment">

    <View
        android:layout_width="@dimen/margin_60dp"
        android:layout_height="@dimen/margin_60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:background="@drawable/circle_border_pressed"
        android:id="@+id/profile_image"/>

    <View
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_8dp"
        android:id="@+id/title"
        android:layout_marginLeft="@dimen/element_spacing_normal"
        android:layout_marginStart="@dimen/element_spacing_normal"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray_background"/>

    <View
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_8dp"
        android:id="@+id/sub_title"
        android:layout_marginLeft="@dimen/element_spacing_normal"
        android:layout_marginStart="@dimen/element_spacing_normal"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/gray_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:id="@+id/divider"
        android:layout_marginTop="@dimen/margin_15dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        android:background="@color/gray_background"/>

</android.support.constraint.ConstraintLayout>
