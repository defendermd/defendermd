<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_15dp"
    android:paddingStart="@dimen/padding_15dp"
    android:paddingEnd="@dimen/padding_15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:textSize="@dimen/title_font_size"
        android:text="Header"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textSize="@dimen/body_medium_font_size"
        android:text="Header Description"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/header"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/never_ask_again"
        android:textSize="@dimen/body_medium_font_size"
        android:text="Never ask again"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_5dp"
        app:layout_constraintTop_toBottomOf="@+id/description"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:textSize="@dimen/body_medium_font_size"
        android:text="Cancel"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:textColor="@color/themeButtonColor"
        app:layout_constraintTop_toBottomOf="@+id/never_ask_again"
        app:layout_constraintRight_toLeftOf="@+id/submit"
        app:layout_constraintEnd_toStartOf="@+id/submit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:textSize="@dimen/body_medium_font_size"
        android:text="Submit"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textColor="@color/themeButtonColor"
        app:layout_constraintTop_toBottomOf="@+id/never_ask_again"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
