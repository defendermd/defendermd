<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120dp"
    android:id="@+id/add_friend_block"
    android:background="@drawable/background_end_of_result_block"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14sp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey_color"
        android:paddingTop="@dimen/padding_7dp"
        android:paddingStart="@dimen/padding_10dp"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingEnd="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:text="@string/end_result_friend_title"
        android:id="@+id/addfriend_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/user_image_width_height"
            android:layout_height="@dimen/user_image_width_height"
            android:id="@+id/addfriend_icon"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_end_of_result_icon">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_15sp"
            android:textColor="@color/dark_grey_color"
            android:layout_toEndOf="@+id/addfriend_icon"
            android:layout_toRightOf="@+id/addfriend_icon"
            android:paddingStart="@dimen/padding_15dp"
            android:paddingLeft="@dimen/padding_15dp"
            android:paddingEnd="@dimen/padding_10dp"
            android:paddingRight="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/padding_75dp"
            android:layout_marginEnd="@dimen/padding_75dp"
            android:layout_gravity="center"
            android:text="@string/end_result_friend_message"
            android:id="@+id/addfriend_message" />

        <TextView
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/margin_30dp"
            android:gravity="center"
            android:id="@+id/addfriend_btn"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:background="@drawable/background_rounded_corner_btn"
            android:text="@string/end_result_add_btn_title"
            android:textColor="@color/white"/>

    </RelativeLayout>

</LinearLayout>