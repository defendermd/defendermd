<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10dp"
    android:paddingStart="@dimen/padding_10dp"
    android:paddingEnd="@dimen/padding_10dp"
    android:background="@color/fragment_background">

    <ImageView
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_20dp"
        android:id="@+id/currency_icon"
        android:src="@drawable/default_error"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currency_name"
        android:layout_toRightOf="@+id/currency_icon"
        android:layout_toEndOf="@+id/currency_icon"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_35dp"
        android:layout_marginEnd="@dimen/margin_35dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="@dimen/body_medium_font_size"/>

    <ImageView
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_20dp"
        android:id="@+id/check_icon"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:src="@drawable/ic_check_white_24dp"/>

</RelativeLayout>
